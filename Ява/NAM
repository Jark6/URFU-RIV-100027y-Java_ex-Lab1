import java.util.Scanner;

public class NAM {
    public void main(String[] args) {
        Scanner id = new Scanner(System.in);
        System.out.println("Введите слово");
        this.word = id.nextLine();
        int step = 0;
  char[] ArrayChar = word.toCharArray();
        for (int k = 0; k < word.length(); k++) {
            for (int j = 0; j < word.length(); j++) {
                for (int i = 0; i < word.length(); i++) {
                    int F1 = FindTwoLetters(word,'a','b');
                    if (i>0 && ArrayChar[i - 1]=='a' && ArrayChar[i]=='b') {
                        FindTwoLetters()
                        step++;
                        for (int tempI = i; tempI < ArrayChar.length-step; tempI++) {
                        ArrayChar[tempI] = ArrayChar[tempI+1];}
                        ArrayChar[ArrayChar.length-step]=0;
                        System.out.print("Шаг " + step + ": ");
                        System.out.println(ArrayChar);
                    }
                }
                if (ArrayChar[j] == 'b') {
                    step++;
                    for (int tempJ = j; tempJ < ArrayChar.length-step; tempJ++) {
                        ArrayChar[tempJ] = ArrayChar[tempJ+1];}
                    ArrayChar[ArrayChar.length-step]=0;
                    System.out.print("Шаг " + step + ":");
                    System.out.println(ArrayChar);
                }
            }
                if (ArrayChar[k] == 'a') {
                    ArrayChar[k] = 'b';
                    step++;
                    System.out.print("Шаг " + step + ":");
                    System.out.println(ArrayChar);
                }
            }

        }
        protected String word = null;

        protected int FindOneLetter(String inputWord,  char targetChar) {
        char[] TempArrayChar = inputWord.toCharArray();
        for(int i=0; i< TempArrayChar.length; i++){
        if (TempArrayChar[i] == targetChar) {
            return i;
        }
        }
        return -1;
        }
    protected int FindTwoLetters(String inputWord,  char FirstChar, char SecondChar) {
        char[] TempArrayChar = inputWord.toCharArray();
        for(int i=0; i< TempArrayChar.length; i++){
            if (TempArrayChar[i] == SecondChar && TempArrayChar[i-1] == FirstChar) {
                return i;
            }
        }
        return -1;
    }
        protected String DeleteSymbol(String inputWord, int number){
            if (number<0){
                return this.word;
            }
            char[] TempArrayChar = inputWord.toCharArray();
            char[] ArrayChar = new char[(TempArrayChar.length-1)];
            for (int i = number; i < (TempArrayChar.length-1); i++) {
                TempArrayChar[i] = TempArrayChar[i+1];}
            TempArrayChar[(TempArrayChar.length-1)]=0;
            for (int i = 0; i < (TempArrayChar.length-1); i++) {
                ArrayChar[i] = TempArrayChar[i];}
            String result = new String(ArrayChar);
            this.word = result;
            return result;
        }
        
    }

